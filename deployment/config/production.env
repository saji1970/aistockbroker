# AI Stock Trading System - Production Environment Configuration

# Environment
ENVIRONMENT=production
NODE_ENV=production

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# API Keys (use GitHub Secrets in production)
GOOGLE_API_KEY=${GOOGLE_API_KEY}
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY}
FINNHUB_API_KEY=${FINNHUB_API_KEY}
MARKETSTACK_API_KEY=${MARKETSTACK_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}

# Database Configuration
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
API_RATE_LIMIT=10000
MAX_CONCURRENT_REQUESTS=1000

# Trading Configuration
TRADING_MODE=shadow
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=10000
RISK_TOLERANCE=0.01
STOP_LOSS_PERCENTAGE=0.03
TAKE_PROFIT_PERCENTAGE=0.08

# Monitoring and Alerting
ENABLE_MONITORING=true
ENABLE_ALERTS=true
ALERT_EMAIL=${ALERT_EMAIL}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}

# Security
SECRET_KEY=${SECRET_KEY}
JWT_SECRET=${JWT_SECRET}
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Performance
CACHE_TTL=600
REQUEST_TIMEOUT=60
MAX_RETRIES=5
BACKOFF_FACTOR=2

# External Services
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query
FINNHUB_BASE_URL=https://finnhub.io/api/v1
MARKETSTACK_BASE_URL=http://api.marketstack.com/v1

# Cloud Storage
STORAGE_BUCKET=${GCP_PROJECT_ID}-ai-stock-prod-data
STORAGE_REGION=us-central1

# Cloud Scheduler
SCHEDULER_TIMEZONE=America/New_York
TRADING_SCHEDULE=0 9 * * 1-5
DATA_UPDATE_SCHEDULE=0 */15 * * 1-5

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# SSL/TLS
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000
SECURE_COOKIES=true

# Rate Limiting
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Caching
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=ai_stock_prod

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/ai-stock-trading.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_CLASS=STANDARD
